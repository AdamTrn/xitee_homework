version: '3.1'

services:
  db:
    image: mysql:8.4.0
    restart: unless-stopped
    ports:
      - '{{ mysql_port }}:{{ mysql_port }}'
    environment:
      MYSQL_DATABASE: {{ db_name }} 
      MYSQL_USER: {{ db_user }} 
      MYSQL_PASSWORD: {{ db_pw }} 
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
    volumes:
      - db:{{ db_path }}
    networks:
      - wp_network

  wordpress:
    depends_on:
      - db
    image: wordpress
    restart: unless-stopped
    environment:
      WORDPRESS_DB_HOST: db:{{ mysql_port}}
      WORDPRESS_DB_NAME: {{ db_name }} 
      WORDPRESS_DB_USER: {{ db_user }}
      WORDPRESS_DB_PASSWORD: {{ db_pw }}
    volumes:
      - wordpress:{{ wp_path }}
    networks:
      - wp_network

  webserver:
    depends_on:
      - wordpress
    image: nginx:1.27.0-alpine
    restart: unless-stopped
    ports:
      - '80:80'
    volumes:
      - wordpress:{{ wp_path }}
      - /etc/nginx-conf:/etc/nginx/conf.d
    networks:
      - wp_network

volumes:
  wordpress:
  db:

networks:
  wp_network:
    driver: bridge